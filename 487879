#include<stdio.h>
int main ()
{
    int a,b;
    printf("Enter a positive number: ");
    scanf("%d",&a);
    for(b=2;b<=a;b++)
    {
    if(a%b==0)
    {
    break ;
    }
    }
    if(b>a/2)
    {
        printf("%d is a prime number. ",a);
    }
    else
    {
        printf("%d is not a prime number. ",a);
    }
}
