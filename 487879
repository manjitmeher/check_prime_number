#include<stdio.h>
int main()
{
    int a=0,b=2;
    int c=1;
    printf("Enter a number:");
    scanf("%d",&a);
    if(a==2)
    {
        printf("%d is not a prime number. ",a);
    }
    else if(a>2)
    {
        while(a>=b)
        {
            if(a%b==0)
            {
                c++;
            }
            b++;
        }
    }
    else
    {
    }
    if(c!=1)
    {
        if(c>2)
        {
            printf("%d is not prime number. ",a);
        }
        else if(c<=2)
        {
            printf("%d is a prime number.",a);
        }
        else
        {
            printf("\n");
        }
    }
}
